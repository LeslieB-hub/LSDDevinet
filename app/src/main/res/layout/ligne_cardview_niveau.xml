<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/colorPrimary"
    app:cardCornerRadius="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#88CE8B">

        <TextView
            android:id="@+id/tv_niveau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Niveau catégorie"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_progression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progression :"
            android:padding="5dp"
            android:layout_marginLeft="10dp"/>


        <ProgressBar
            android:id="@+id/pb_progression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="onClickProgression"/>

        <Button
            android:id="@+id/btn_reinitialiser"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Réinitialiser"
            android:layout_marginLeft="255dp"
            android:onClick="onClickInitialiser"
            />


    </LinearLayout>



</androidx.cardview.widget.CardView>