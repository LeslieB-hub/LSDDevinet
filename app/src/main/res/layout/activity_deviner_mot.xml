<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DevinerMotActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/my_image"
        android:layout_margin="40dp"
        />

    <EditText
        android:id="@+id/mot_proposition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:hint="devinez le mot"
        />


    <TextView
        android:id="@+id/mot_a_deviner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mot_proposition"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:hint="mot"
        />



    <Button
        android:id="@+id/btn_1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="65dp"

        />
    <Button
        android:id="@+id/btn_2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        android:layout_marginBottom="100dp"

        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_2"
        android:layout_marginBottom="100dp"

        />
    <Button
        android:id="@+id/btn_4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_3"
        android:layout_marginBottom="100dp"

        />
    <Button
        android:id="@+id/btn_5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_4"
        android:layout_marginBottom="100dp"

        />
    <Button
        android:id="@+id/btn_6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_5"
        android:layout_marginBottom="100dp"
        />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@id/btn_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="65dp"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@id/btn_2"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/btn_8"
        app:layout_constraintBottom_toTopOf="@id/btn_3"

        />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        app:layout_constraintBottom_toTopOf="@id/btn_4"

        />

    <Button
        android:id="@+id/btn_11"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/btn_10"
        app:layout_constraintBottom_toTopOf="@id/btn_5"

        />

    <Button
        android:id="@+id/btn_12"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/btn_11"
        app:layout_constraintBottom_toTopOf="@id/btn_6"

        />


</androidx.constraintlayout.widget.ConstraintLayout>