<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devinet !"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_Jouer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titre"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:drawableTop="@drawable/ic_action_jouer"
        android:text="Jouer"
        android:textStyle="bold"
        android:onClick="onClickJouer"
        android:layout_gravity="center"
        android:background="@drawable/shadow_button_domi"

        />

    <Button
        android:id="@+id/btn_Resultat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titre"
        android:layout_marginTop="50dp"
        android:layout_marginRight="60dp"
        android:drawableTop="@drawable/ic_baseline_bar_chart_24"
        android:text="Mes rÃ©sultats"
        android:textStyle="bold"
        android:onClick="onClickResultat"
        android:layout_gravity="center"
        android:background="@drawable/shadow_button_domi"/>

    <Button
        android:id="@+id/btn_Proposition"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Jouer"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:drawableTop="@drawable/ic_baseline_create_24"
        android:text="Proposer"
        android:textStyle="bold"
        android:onClick="onClickProposition"
        android:layout_gravity="center"
        android:background="@drawable/shadow_button_domi"/>

    <Button
        android:id="@+id/btn_Quitter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Resultat"
        android:layout_marginTop="50dp"
        android:layout_marginRight="60dp"
        android:drawableTop="@drawable/ic_baseline_exit_to_app_24"
        android:text="Quitter"
        android:textStyle="bold"
        android:onClick="onClickQuitter"
        android:layout_gravity="center"
        android:background="@drawable/shadow_button_domi"/>







</androidx.constraintlayout.widget.ConstraintLayout>